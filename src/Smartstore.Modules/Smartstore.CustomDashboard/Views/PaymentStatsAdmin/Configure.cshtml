@model Smartstore.CustomDashboard.Models.ConfigurationModel

@{
    Layout = "_ConfigureModule";
    ViewData["Title"] = "Dashboard Einstellungen";
}

<widget target-zone="admin_button_toolbar_before">
    <button id="SaveConfigButton" type="submit" name="save" class="btn btn-warning" value="save">
        <i class="fa fa-check"></i>
        <span>@T("Admin.Common.Save")</span>
    </button>
</widget>

<form asp-action="Configure" method="post">
    <div class="x-plugin-configuration adminContent">
        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="Enabled" />
            </div>
            <div class="adminData">
                <setting-editor asp-for="Enabled"></setting-editor>
            </div>
        </div>

        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="EnabledEmail" />
            </div>
            <div class="adminData">
                <setting-editor asp-for="EnabledEmail"></setting-editor>
            </div>
        </div>

        <div class="adminRow">
            <div class="adminTitle">
                <smart-label asp-for="EnabledNewsFeed" />
            </div>
            <div class="adminData">
                <setting-editor asp-for="EnabledNewsFeed"></setting-editor>
            </div>
        </div>
    </div>
</form>


