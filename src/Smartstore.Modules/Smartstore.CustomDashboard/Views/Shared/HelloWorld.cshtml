@using Smartstore.Core.Web
﻿@using System.IO

@{
    Layout = "_AdminLayout";
    var cssPath = @"C:\Users\Marcel Alexandre\source\repos\smartstore\src\Smartstore.Modules\Smartstore.CustomDashboard\wwwroot\admin\_custom-dashboard.css";
    var cssContent = System.IO.File.ReadAllText(cssPath);
}
<style>
    @Html.Raw(cssContent)
</style>

<div class="section-header">
    <div class="title">
        <i class="far fa-chart-bar"></i>
        @T("Admin.Dashboard.StoreStatistics")
    </div>
</div>

<div class="dashboard-grid">
    @for (int row = 1; row <= 5; row++)
    {
        <div class="grid-cell" data-row="@row" data-col="1">
            <select class="widget-chooser form-control">
                <option value="">Widget auswählen...</option>
                <option value="Payments">Payments</option>
                <option value="LastContacts">Letzte Kontakte</option>
                <option value="Bestsellers">Top Bestsellers</option>
                <option value="TopCustomers">Top Kunden</option>
                <option value="CustomerRegistrations">Neuanmeldungen</option>
                <option value="LatestOrders">Letzte Bestellungen</option>
            </select>
        </div>
    }
</div>

@section Scripts {
    <script src="@Url.Content("~/Plugins/Smartstore.CustomDashboard/Scripts/dashboard.js")"></script>
}