@using Smartstore.CustomDashboard.Components
@model List<ContactEmail>

<div class="report">
    <div class="report-title-row">
        <div class="report-title">
            @T("Plugins.CustomDashboard.Dashboard.NewContacts")
        </div>
    </div>

    <div class="report-body">
        <div class="table-responsive table-dashboard">
            <table class="table table-hover table-prevent-overflow">
                <thead>
                    <tr>
                        <th>@T("Plugins.CustomDashboard.Dashboard.Email")</th>
                        <th class="text-center">@T("Common.Date")</th>
                        <th class="text-center">@T("Plugins.CustomDashboard.Dashboard.Replay")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Email</td>
                            <td class="text-center">@item.CreatedOn.ToLocalTime().ToString("g")</td>
                            <td class="text-center">
                                <a href="mailto:@item.Email">
                                    <i class="fas fa-envelope"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

