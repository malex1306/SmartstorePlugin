@model IEnumerable<Smartstore.CustomDashboard.Components.PaymentMethodStat>

    <div class="report-box"></div>
<div class="report">
    <div class="report-title">
        <i class="fa fa-credit-card"></i> <span>@T("Plugins.CustomDashboard.Admin.Dashboard.PaymentMethods")</span>
    </div>

    <div class="report-body">
        <div class="table-responsive table-dashboard table-hover table-prevent-overflow">
            <table class="table small">
                <thead>
                    <tr>
                        <th class="display-row" style="width:75%">@T("Plugins.CustomDashboard.Admin.Dashboard.Method")</th>
                        <th class="display-row text-center" style="width:25%">@T("Plugins.CustomDashboard.Admin.Dashboard.Count")</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var stat in Model)
                    {
                        <tr>
                            <td class="display-row" title="@stat.MethodSystemName">
                                @T($"Plugins.FriendlyName.{stat.MethodSystemName}")
                            </td>
                            <td class="display-row text-center" title="@stat.Count">
                                @stat.Count
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>