@model IEnumerable<Smartstore.Stats.Payment.Components.PaymentMethodStat>

<div class="report">
    <div class="report-title-row">
        <div class="report-title">
            @T("Plugins.Stats.Payment.Admin.Dashboard.PaymentMethods")
        </div>
    </div>

    <div class="table-responsive table-dashboard table-hover table-prevent-overflow">
        <table class="table small">
            <thead>
                <tr>
                    <th class="display-row" style="width:75%">@T("Plugins.Stats.Payment.Admin.Dashboard.Method")</th>
                    <th class="display-row text-center" style="width:25%">@T("Plugins.Stats.Payment.Admin.Dashboard.Count")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stat in Model)
                {
                    <tr>
                        <td class="display-row" title="@stat.MethodSystemName">
                            @T($"Plugins.FriendlyName.{stat.MethodSystemName}")
                        </td>
                        <td class="display-row text-center" title="@stat.Count">
                            @stat.Count
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
